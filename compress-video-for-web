#!/bin/bash

concat=false
while getopts "c" o; do
  case "$o" in
    c) concat=true ;;
  esac
done
shift $(($OPTIND-1))

if [ $# -lt 1 ]; then
  echo "usage: $0 [-c] <in-files> ...">&1
  exit 1
fi

compress () {
  local ai="" if="$1"
  if $concat; then
    local tmp="$(mktemp)"
    for x in "$@"; do
      echo "file '$(pwd)/$x'" >> "$tmp"
    done
    ai="-f concat -i $tmp"
  else
    ai="-i $1"
  fi
  echo "## ai: $ai">&2
  #parallel -j2 --progress <<EOF
  schedtool -D -e ffmpeg $ai -y \
    -s hd720 \
    -r 29.97 \
    -c:v libvpx \
    -crf 10 \
    -b:v 768k \
    -c:a libvorbis \
    -ar 48000 \
    -b:a 96k \
    "${if%.*}_wq.webm"
  schedtool -D -e ffmpeg $ai -y \
    -s hd720 \
    -r 29.97 \
    -c:v h264 \
    -profile:v baseline \
    -movflags faststart \
    -b:v 768k \
    -c:a aac \
    -strict -2 \
    -ar 48000 \
    -b:a 96k \
    "${if%.*}_wq.mp4"
#EOF
  rm -f "$tmp"
}

if $concat; then
  compress "$@"
else
  for if in "$@"; do
    compress "$if"
  done
fi
