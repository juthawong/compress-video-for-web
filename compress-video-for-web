concat=false
bitrate_v="768k"
bitrate_a="96k"
format="all"
framerate="29.97"
resolution="720"
while getopts "a:cf:m:r:v:" o; do
  case "$o" in
    a) bitrate_a="$OPTARG" ;;
    c) concat=true ;;
    f) format="$OPTARG" ;;
    m) framerate="$OPTARG" ;;
    r) resolution="$OPTARG" ;;
    v) bitrate_v="$OPTARG" ;;
  esac
done
shift $(($OPTIND-1))

if [ $# -lt 1 ]; then
  echo "usage: $0 [-c] <in-files> ...">&2
  echo "  [-r <resolution>]">&2
  exit 1
fi

case "$resolution" in
  480) res_a="hd480" res_n="480p" ;;
  720) res_a="hd720" res_n="720p" ;;
  1080) res_a="hd1080" res_n="1080p" ;;
  2048) res_a="2k" res_n="2048p" ;;
  4096) res_a="4k" res_n="4096p" ;;
esac

compress () {
  local ai="" if="$1"
  if $concat; then
    local tmp="$(mktemp)"
    for x in "$@"; do
      echo "file '$(pwd)/$x'" >> "$tmp"
    done
    ai="-f concat -i $tmp"
  else
    ai="-i $1"
  fi
  echo "## ai: $ai">&2
  #parallel -j2 --progress <<EOF
  if test "$format" = all -o "$format" = webm; then
    schedtool -D -e ffmpeg $ai -y \
      -s "$res_a" \
      -r "$framerate" \
      -c:v libvpx \
      -crf 10 \
      -b:v "$bitrate_v" \
      -c:a libvorbis \
      -ar 48000 \
      -b:a "$bitrate_a" \
      "${if%.*}_${res_n}_wq.webm"
  fi
  if test "$format" = all -o "$format" = mp4; then
    schedtool -D -e ffmpeg $ai -y \
      -s "$res_a" \
      -r "$framerate" \
      -c:v h264 \
      -profile:v baseline \
      -movflags faststart \
      -b:v "$bitrate_v" \
      -c:a aac \
      -ar 48000 \
      -b:a "$bitrate_a" \
      "${if%.*}_${res_n}_wq.mp4"
  fi
#EOF
  rm -f "$tmp"
}

if $concat; then
  compress "$@"
else
  for if in "$@"; do
    compress "$if"
  done
fi
