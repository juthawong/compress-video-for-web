#!/bin/bash

if [ $# -lt 1 ]; then
  echo "usage: $0 <in-files> ...">&1
  exit 1
fi
for if in "$@"; do
  #parallel -j2 --progress <<EOF
  ffmpeg -i "$if" -y -s hd720 -c:v libvpx -crf 10 -b:v 768k -c:a libvorbis "${if%.*}_wq.webm"
  ffmpeg -i "$if" -y -s hd720 -c:v h264 -b:v 768k -c:a aac -strict -2 "${if%.*}_wq.mp4"
#EOF
done
